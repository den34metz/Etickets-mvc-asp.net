@model IEnumerable<Producer>

@{
    ViewData["Title"] = "Producers";
        }

<div class="row producerRow">
    <div class="col-md-12">
        <table class="producerTable">
            <thead>
                <tr class="actorTr">
                    <th>@Html.DisplayNameFor(model => model.ProfilePicURL)</th>
                    <th>@Html.DisplayNameFor(model => model.FullName)</th>
                    <th>@Html.DisplayNameFor(model => model.Bio)</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr class="actorTr">
                        <td class="align-middle">
                            <img class="rounded-circle" src="@item.ProfilePicURL" alt="@item.FullName" style="max-width: 150px" />
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.FullName)
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.Bio)
                        </td>
                        <td class="align-middle actionBtns">
                            <a class="btn btn-outline-primary"><i class=" bi bi-pencil-square"></i>Edit</a> |
                            <a class="btn btn-outline-info"><i class=" bi-eye"></i>Details</a> |
                            <a class="btn btn-outline-danger"><i class="bi bi-trash"></i>Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

    </div>
</div>