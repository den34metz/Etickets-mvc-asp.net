@model Actor

@{         
    ViewData["Title"] = "Add a new actor";
}

<div class="addActorWrapper">
    <h1>Add a New Actor</h1>
    <form class="addForm" asp-action="Create">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group text-center">
            <img id="ProfilePicPreview" />
        </div>
        <div class="form-group">
            <label asp-for="ProfilePicURL" class="control-label"></label>
            <input asp-for="ProfilePicURL" class="form-control" id="profilePic"  />
            <span asp-validation-for="ProfilePicURL" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="FullName" class="control-label"></label>
            <input asp-for="FullName" class="form-control" id="profilePic" />
            <span asp-validation-for="FullName" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Bio" class="control-label"></label>
            <input asp-for="Bio" class="form-control" id="profilePic" />
            <span asp-validation-for="Bio" class="text-danger"></span>
        </div>

        <div class="addActorBtns">
            <a asp-controller="Actors" asp-action="Index" class="btn btn-outline-secondary internalBtn">Show All</a>
            <input type="submit" value="Create" class="btn btn-outline-success internalBtn" />
        </div>
    </form>
</div>

