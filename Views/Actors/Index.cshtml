@* Define model *@
@model IEnumerable<Actor>
@* Define ViewData *@
@{
    ViewData["Title"] = "List of Actors";
}


@* Write Code *@


<div class="row actorRow">
    <div class="col-md-12">
        <table class="actorTable">
            <thead>
                <tr class="actorTr">
                    <th>@Html.DisplayNameFor(model => model.ProfilePicURL)</th>
                    <th>@Html.DisplayNameFor(model => model.FullName)</th>
                    <th>@Html.DisplayNameFor(model => model.Bio)</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr class="actorTr">
                        <td class="align-middle">
                            <img class="rounded-circle" src="@item.ProfilePicURL" alt="@item.FullName" style="max-width: 150px" />
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.FullName)
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.Bio)
                        </td>
                        <td class="align-middle actionBtns">
                            <a class="btn btn-outline-primary" asp-action="Edit" asp-route-id="@item.Id"><i class=" bi bi-pencil-square"></i>Edit</a> |
                            <a class="btn btn-outline-info" asp-action="Details" asp-route-id="@item.Id"><i class=" bi-eye"></i>Details</a> |
                            <a class="btn btn-outline-danger" asp-action="Delete" asp-route-id="@item.Id" onclick="return confirm('Are you sure you want to delete this actor?;')"><i class="bi bi-trash"></i>Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

    </div>
</div>

<div class="text-white addActorBtn">
    <a asp-controller="Actors" asp-action="Create" class="btn btn-success actorLink">
        <i class="bi bi-plus-circle"></i>Add New Actor
    </a>
</div>


@* Modal for confirming delete action *@

<div class="modal fade" id="newItemModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel"
     aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header text-center">
                <h5 class="modal-title w-100 font-weight-bold">Are you sure?</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            
            <div class="modal-footer">
                <a class="btn btn-outline-danger" asp-action="Delete" asp-route-id=" "><i class="bi bi-trash"></i>Delete</a>
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>



