@model Actor

@{
    ViewData["Title"] = "Details of Actor";
}

<div class="addActorWrapper">
    <h1>Details for @Model.FullName</h1>
        <div class="form-group text-center">
            <img id="ProfilePicPreview" class="detailImage" />
        </div>
        <div class="form-group">
            <label asp-for="ProfilePicURL" class="control-label"></label>
            <input asp-for="ProfilePicURL" class="form-control" id="profilePic" readonly />
            <span asp-validation-for="ProfilePicURL" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="FullName" class="control-label"></label>
            <input asp-for="FullName" class="form-control" id="profilePic" readonly/>
            <span asp-validation-for="FullName" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Bio" class="control-label"></label>
            <input asp-for="Bio" class="form-control" id="profilePic" readonly/>
            <span asp-validation-for="Bio" class="text-danger"></span>
        </div>

        <div class="addActorBtns">
            <a asp-controller="Actors" asp-action="Index" class="btn btn-outline-secondary internalBtn">Show All</a>
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-outline-success internalBtn">Edit</a>
        </div>
</div>
